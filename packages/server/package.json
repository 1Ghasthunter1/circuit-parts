{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "dev": "ts-node-dev --max_old_space_size=8192  index.ts",
    "install:all": "npm i && cd ../client && npm i",
    "dev:full": "concurrently -n \"BACK-END,FRONT-END\" -c \"bgBlue.bold,bgGreen.bold\" \"npm:dev\" \"cd ../client && npm start\"",
    "build:ui": "cd ../client && npm run build && cp -r build ../server/build",
    "lint": "eslint --ext .ts .",
    "start": "node ./build/index.js",
    "build:local": "rm -rf build && npm run tsc && npm run build:ui",
    "deploy": "npm run build:local && git add . && git commit -m herokuBuild && cd ../.. && git push heroku `git subtree split --prefix packages/server master`:master --force",
    "deploy:new": "npm run build:local && git add . && git commit -m herokuBuild && git push origin production"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/jsonwebtoken": "^8.5.8",
    "ajv": "^8.11.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-validator": "^6.14.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.2",
    "tslog": "^3.3.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "concurrently": "^7.3.0",
    "eslint": "^8.22.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  },
  "_moduleAliases": {
    "~": "src/"
  }
}
